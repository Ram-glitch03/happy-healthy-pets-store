{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "*.css",
            "use": "@vercel/static"
        },
        {
            "src": "*.js",
            "use": "@vercel/static",
            "config": {
                "excludeFiles": [
                    "server.js",
                    "test-email.js"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/create-checkout-session",
            "dest": "/server.js"
        },
        {
            "src": "/webhook",
            "dest": "/server.js"
        },
        {
            "src": "/health",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}